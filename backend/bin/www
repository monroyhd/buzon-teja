#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('backend:server');
var http = require('http');

// Cargar variables de entorno
require('dotenv').config();

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.BACKEND_PORT || process.env.PORT || '3020');
app.set('port', port);

/**
 * Determinar host basado en la variable de entorno
 * Respeta BACKEND_HOST para configuraciÃ³n flexible de producciÃ³n
 */
var host = process.env.BACKEND_HOST || (process.env.NODE_ENV === 'production' ? '127.0.0.1' : '0.0.0.0');

/**
 * Create HTTP server.
 */

var server = http.createServer(app);

/**
 * Listen on provided port and host.
 */

server.listen(port, host);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or false.
 */

function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = server.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'host ' + addr.address + ':' + addr.port;
  
  console.log(`ğŸš€ Backend servidor iniciado en ${host}:${port}`);
  console.log(`ğŸ“ Modo: ${process.env.NODE_ENV || 'development'}`);
  console.log(`ğŸ”’ Acceso: ${host === '0.0.0.0' ? 'PÃºblico (todas las interfaces)' : 'Solo interno (localhost)'}`);
  console.log('Conectado a la base de datos SQLite.');
  
  debug('Listening on ' + bind);
}

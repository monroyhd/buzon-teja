# ========================================
# CONFIGURACIÓN BUZÓN ELECTRÓNICO TEJA
# ========================================

# Entorno de ejecución
NODE_ENV=development

# ========================================
# BASE DE DATOS
# ========================================
DB_TYPE=sqlite
DB_PATH=./database/buzon.db

# ========================================
# CONFIGURACIÓN DE SERVIDORES
# ========================================
BACKEND_PORT=3020
FRONTEND_PORT=3021

# Hosts de red (0.0.0.0 = todas las interfaces, 127.0.0.1 = solo local)
BACKEND_HOST=0.0.0.0
FRONTEND_HOST=0.0.0.0

# ========================================
# URLs DE COMUNICACIÓN
# ========================================
# URLs internas (comunicación servidor a servidor)
BACKEND_INTERNAL_URL=http://127.0.0.1:3020
FRONTEND_INTERNAL_URL=http://127.0.0.1:3021

# URLs públicas (acceso desde navegador/cliente)
BACKEND_PUBLIC_URL=http://localhost:3020
FRONTEND_PUBLIC_URL=http://localhost:3021

# ========================================
# SEGURIDAD
# ========================================
JWT_SECRET=buzon-teja-jwt-secret-2024-produccion-segura

# ========================================
# CONFIGURACIÓN SMTP
# ========================================
SMTP_HOST=smtp.ionos.mx
SMTP_PORT=587
SMTP_USER=buzon.notificaciones@tejabc.mx
SMTP_PASS="LOPKvcos#24"
